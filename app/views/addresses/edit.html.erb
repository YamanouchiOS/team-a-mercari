<%= render partial: "layouts/header" %>

<main class=" l-container clearfix">
  <div class="l-content">
    <section class="l-chapter-container">
    <h2 class="l-chapter-head">住所変更</h2>

      <div class="l-single-inner">
        <div class="l-single-content">
          <%= form_for @address do |f| %>
          <div class="form-group", style="margin-top: 0">
            <%= f.label "お名前" %>
            <span class="form-require">必須</span>
            <%= f.text_field :family_name, autofocus: true, autocomplete: "off", placeholder: "例）佐々木", class: "input-default" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "off", placeholder: "例）蔵之介", class: "input-default" %>
          </div>

          <div class="form-group">
            <%= f.label "お名前カナ" %>
            <span class="form-require">必須</span>
            <%= f.text_field :family_kana, autofocus: true, autocomplete: "off", placeholder: "例）ササキ", class: "input-default" %>
            <%= f.text_field :first_kana, autofocus: true, autocomplete: "off", placeholder: "例）クラノスケ", class: "input-default" %>
          </div>

          <div class="form-group">
            <%= f.label "郵便番号" %>
            <span class="form-require">必須</span>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "off", placeholder: "例）123-4567", class: "input-default" %>
          </div>

          <div class="form-group">
            <%= f.label "都道府県" %>
            <span class="form-require">必須</span>
            <div class="select-wrap">
              <%= f.select :prefecture, Address.prefectures.keys.to_a, {}, autofocus: true, autocomplete: "off", class: "select-default" %>
              <i class="fas fa-angle-down fas fa-angle-down"></i>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "市区町村" %>
            <span class="form-require">必須</span>
            <%= f.text_field :city, autofocus: true, autocomplete: "off", placeholder: "例）京都市上京区", class: "input-default" %>
          </div>

          <div class="form-group">
            <%= f.label "番地" %>
            <span class="form-require">必須</span>
            <%= f.text_field :street_number, autofocus: true, autocomplete: "off", placeholder: "例）伊勢谷町727", class: "input-default" %>
          </div>

          <div class="form-group">
            <%= f.label "建物名" %>
            <span class="form-arbitrary">任意</span>
            <%= f.text_field :building_number, autofocus: true, autocomplete: "off", placeholder: "例）聚楽ビル105", class: "input-default" %>
          </div>

          <div class="form-group">
            <%= f.label "電話" %>
            <span class="form-arbitrary">任意</span>
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "off", placeholder: "例）09012345678", class: "input-default" %>
          </div>

          <div class="actions">
            <%= f.submit "変更する", class: "btn-default btn-red", style: "margin-top: 30px"%>
          </div>
          <% end %>
        </div>
      </div>
  </div>
<%= render partial: "layouts/leftside_menu" %>
</main>

<%= render partial: "layouts/footer" %>
