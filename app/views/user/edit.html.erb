<%= render partial: "layouts/header" %>
<main class=" l-container clearfix">
  <div class="l-content">
    <section class="l-chapter-container">
      <h2 class="l-chapter-head">プロフィール</h2>
      <%= form_for @user do |f| %>
        <div class="setting-profile-icon">
          <figure>
            <img src="//static-mercari-jp-imgtr2.akamaized.net/images/member_photo_noimage_thumb.png" width="60" height="60">
          </figure>
          <%= f.text_field :nickname, placeholder: "AYA☆サマーセール中！", class: "input-default" %>
        </div>

        <div class="setting-profile-content">
          <%= f.fields_for :address do |address| %>
            <%= address.text_area :introduction, placeholder: "例）こんにちは☆ ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に9号です。気持ちよくお取引できるよう心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪", class: "textarea-default" %>
            <% end %>
          <%= f.submit "変更する", class: "btn-default btn-red" %>
        </div>
      <% end %>
    </section>
  </div>
<%= render partial: "layouts/leftside_menu" %>
</main>
<%= render partial: "layouts/footer" %>
