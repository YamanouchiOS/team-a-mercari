<%= render partial: "layouts/header" %>
<nav class="bread-crumbs">
  <ul>
    <li itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
      <%= link_to root_path do %>
        <span>メルカリ</span>
      <% end %>
      <i class="fas fa-angle-right"></i>
    </li>
    <li itemscope itemtype="http://data-vocabulary.org/Breadcrumb">

      <%= link_to user_path(current_user) do %>
        <span>マイページ</span>
      <% end %>

      <i class="fas fa-angle-right"></i>
      </li>
      <li itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
        <span itemprop="title">メール/パスワード</span>
      </li>
  </ul>
</nav>

<main class=" l-container clearfix">
  <div class="l-content">
    <section class="l-chapter-container">
      <h2 class="l-chapter-head">メール/パスワード</h2>
      <div class="l-single-inner">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="l-single-content">
            <div class="form-group">
              <%= f.label "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可", class: "input-default" %>
              <p class="form-info-text">メールアドレスを変更しても確認メールは送信されません。本家ではメール内のURLをクリックすると変更完了です。</p>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <%= f.label "現在のパスワード" %>
              <%= f.password_field :current_password, autocomplete: "off", placeholder: "6文字以上", class: "input-default" %>

              <%= f.label "新しいパスワード" %>
              <%= f.password_field :password, autocomplete: "off", placeholder: "6文字以上", class: "input-default" %>

              <%= f.label "新しいパスワード確認" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "6文字以上", class: "input-default" %>
              <p class="form-info-text">パスワードを設定したい場合は上記をすべて入力してください。（設定しない場合は空欄）</p>
            </div>

            <div class="actions form-group">
              <%= f.submit "変更する", class: "btn-default btn-red" %>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
  <%= render partial: "layouts/leftside_menu" %>
</main>
<%= render partial: "layouts/footer" %>
