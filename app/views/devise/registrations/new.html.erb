<div class="single-container">
  <header class="single-header">
    <h1>
      <a href="/">
        <img src="<%= asset_path "mercari_logo.svg" %>" alt="mercari">
      </a>
    </h1>
    <nav class="progress-bar signup-bar">
    <ol class="clearfix">
      <li class="active">
        会員情報
        <div class="progress-status"></div>
      </li>
      <li class="">
        住所入力
        <div class="progress-status"></div>
      </li>
      <li class="">
                  完了
                <div class="progress-status"></div>
      </li>
    </ol>
  </nav>
  </header>
  <div class="l-single-container">
    <h2 class="l-single-head">会員情報入力</h2>
      <div class="l-single-inner">
        <div class="l-single-content">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group", style="margin-top: 0">
              <%= f.label "ニックネーム" %>
              <span class="form-require">必須</span>
              <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "例）メルカリ太郎", class: "input-default" %>
            </div>

            <div class="form-group">
              <%= f.label "メールアドレス" %>
              <span class="form-require">必須</span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可", class: "input-default" %>
            </div>

            <div class="form-group">
              <%= f.label "パスワード" %>
              <span class="form-require">必須</span>
              <%= f.password_field :password, autocomplete: "off", placeholder: "６文字以上", class: "input-default" %>
            </div>

            <div class="form-group">
              <%= f.label "パスワード（確認）" %>
              <span class="form-require">必須</span>
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "６文字以上", class: "input-default" %>
            </div>

            <div class="actions">
              <%= f.submit "次へ進む", class: "btn-default btn-red", style: "margin-top: 30px"%>
            </div>
          <% end %>
      </div>
    </div>
  </div>

  <footer class="single-footer">
    <nav>
      <ul class="clearfix">
        <li>
          <a href="https://www.mercari.com/jp/privacy/">プライバシーポリシー</a>
        </li>
        <li>
          <a href="https://www.mercari.com/jp/tos/">メルカリ利用規約</a>
        </li>
                        <li>
            <a href="https://www.mercari.com/jp/tokutei/">特定商取引に関する表記</a>
          </li>
                    </ul>
    </nav>
    <a href="https://www.mercari.com/jp/" class="single-footer-logo">
      <img src="//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?1845134038" alt="mercari" width="80" height="65">
    </a>
    <p>
      <small>&copy; 2018 Mercari</small>
    </p>
  </footer>
</div>
