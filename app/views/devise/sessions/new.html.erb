<div class="single-container">
  <header class="single-header">
    <h1>
      <a href="https://www.mercari.com/jp/">
        <img src="//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1845134038" alt="mercari">
      </a>
    </h1>
  </header>
  <main class="single-main">
    <div class="login-panel">
    <div class="login-no-account">
      <p>アカウントをお持ちでない方はこちら</p>
      <%= link_to "新規会員登録", '/users/sign_up' %>
    </div>

    <div class="login-form-inner">
      <button id="facebook-login" class="btn-default btn-sns btn-sns-facebook">
        <i class="icon-facebook"></i>
        Facebookでログイン
      </button>
      <button id="google-login" class="btn-default btn-sns btn-sns-google">
        <i class="icon-google-plus"></i>
        Googleでログイン
      </button>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="login-form-inner">
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "login-input-text input-default" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "login-input-text input-default" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "login-submit btn-default btn-red" %>
        </div>
      </div>
    <% end %>
    <form id="login_form_facebook" action="/jp/login/" method="POST" novalidate="novalidate">
    <input type="hidden" name="__csrf_value" value="e8a44ab743b7916b5d604801101e8ed5d10878a2d7cb60fc25c82394c4edba987e99a0057e1a899004e91836e18931694298a86e98f827a2ecf5467a55497907b">
    <input type="hidden" name="nickname" value="">
    <input type="hidden" name="email" value="">
    <input type="hidden" name="facebook_user_id" value="">
    <input type="hidden" name="facebook_access_token" value="">
    <input type="hidden" name="login_type" value="facebook">
    <input type="hidden" name="login_callback" value="https://www.mercari.com/jp/" >
    </form>

    <form id="login_form_google" action="/jp/login/" method="POST" novalidate="novalidate">
    <input type="hidden" name="__csrf_value" value="e8a44ab743b7916b5d604801101e8ed5d10878a2d7cb60fc25c82394c4edba987e99a0057e1a899004e91836e18931694298a86e98f827a2ecf5467a55497907b">
    <input type="hidden" name="nickname" value="">
    <input type="hidden" name="email" value="">
    <input type="hidden" name="google_user_id" value="">
    <input type="hidden" name="google_access_token" value="">
    <input type="hidden" name="login_type" value="google">
    <input type="hidden" name="login_callback" value="https://www.mercari.com/jp/" >
    </form>
