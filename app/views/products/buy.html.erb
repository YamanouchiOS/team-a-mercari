              <button type="submit" class="btn-default btn-red bold">購入する</button>
            <% end %>
          </div>
        </section>
        <section class="buy-content buy-user-info">
          <div class="buy-content-inner">
            <h3>配送先 </h3>
            <address class="buy-user-info-text">
              〒<%= @user.address.postal_code %>
              <br>
              <%= @user.address.prefecture %>
              <%= @user.address.city %>
              <%= @user.address.street_number %>
              <%= @user.address.building_number %>
              <br>
              <%= @user.address.family_name %><%= @user.address.first_name %>
            </address>
            <p class="buy-user-info-text">
            </p>
            <a href="<%= edit_address_url(current_user.id) %>" class="buy-user-info-fix"><span>変更する</span><i class="icon-arrow-right"></i></a>
          </div>
        </section>
        <section class="buy-content buy-user-info" data-buy="pay-method">
          <div class="buy-content-inner">
            <h3>支払い方法</h3>
            <p class="buy-user-info-text">
              ************9008
              <br>
              06 / 20
            </p>
            <figure>
              <img src="//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1236411757" width="49" height="15" alt="visa">
            </figure>
            <p></p>
            <a href="https://www.mercari.com/jp/transaction/select_card/m52317412621/" class="buy-user-info-fix">
              <span>変更する</span>
              <i class="icon-arrow-right"></i>
            </a>
          </div>
        </section>
      </section>
</main>
<%= render partial: "layouts/footer_simple" %>
</div>
<%= render partial: "layouts/footer_scripts" %>
</body>
